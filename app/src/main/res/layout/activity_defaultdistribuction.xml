        android:fontFamily="@font/aclonica"
        android:text="8"
        android:textAlignment="viewEnd"
        android:textColor="@color/red_dd"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/output_sab" />

    <TextView
        android:id="@+id/mod_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/aclonica"
        android:text="-1"
        android:textColor="#6A1111"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/output_for"
        app:layout_constraintTop_toBottomOf="@+id/output_for" />

    <TextView
        android:id="@+id/mod_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/aclonica"
        android:text="-1"
        android:textColor="#6A1111"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/output_des"
        app:layout_constraintTop_toBottomOf="@+id/output_des" />

